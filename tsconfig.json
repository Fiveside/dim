{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "reactNamespace": "JSX",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "listFiles": true,
        "pretty": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src"
    },

    "exclude": [
        "node_modules"
    ]
}
